 <% if @message && @message.errors.any? %>
   <div>
     <strong>Some issues with your message, please fix them:</strong>
     <ul>
       <% @message.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
     </ul>
   </div>
 <% end %>

<div class="container-fluid">
  <div class="row">
    <h1 class="text-center"> Post a Song</h1>
  </div>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 well">
      <form method="post" action="/messages">
        <div class="form-group">
          <label>Title:</label>
          <input type="text"  class="form-control"name="title" value="<%= @message && @message.title %>">
        </div>
        <div class="form-group">
          <label>Author:</label>
           <input type="text"  class="form-control" name="author" value="<%= @message && @message.author %>">
        </div>
        <div class="form-group">
          <label>Description:</label>
          <input type="text"  class="form-control" name="content" value="<%= @message && @message.content %>">
        </div>
        <div class="form-group">
          <input type="submit" class="btn btn-default" value="Submit">
        </div>
      </form>
    </div>
    <div class="col-md-4"></div>
    
  </div>
   
  </div>